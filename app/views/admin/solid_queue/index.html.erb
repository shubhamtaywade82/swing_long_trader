<% content_for :page_title, "Solid Queue Admin" %>

<style>
  .queue-admin-page {
    background: #f8f9fa;
    min-height: 100vh;
    padding: 0.5rem 0;
    font-size: 0.875rem;
  }

  /* Compact header */
  .queue-admin-page h1 {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .queue-admin-page .text-muted {
    font-size: 0.75rem;
    margin-bottom: 0;
  }

  /* Compact stat cards */
  .stat-card {
    border: none;
    border-radius: 6px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
    margin-bottom: 0.5rem;
  }

  .stat-card .card-body {
    padding: 0.5rem 0.75rem;
  }

  .stat-icon {
    width: 36px;
    height: 36px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem !important;
  }

  .stat-card h6 {
    font-size: 0.65rem;
    margin-bottom: 0.25rem;
  }

  .stat-card h2, .stat-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0;
    font-weight: 700;
  }

  /* Compact filter section */
  .filter-section {
    background: white;
    border-radius: 6px;
    padding: 0.75rem;
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
    margin-bottom: 0.75rem;
  }

  .filter-section .form-label {
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .filter-section .form-select,
  .filter-section .form-control {
    font-size: 0.8rem;
    padding: 0.25rem 0.5rem;
    height: auto;
  }

  .filter-section .btn {
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
  }

  /* Compact tables */
  .job-table {
    font-size: 0.8rem;
    margin-bottom: 0;
  }

  .job-table th {
    background: #f8f9fa;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.7rem;
    letter-spacing: 0.3px;
    border-bottom: 1px solid #dee2e6;
    padding: 0.4rem 0.5rem;
    white-space: nowrap;
  }

  .job-table td {
    padding: 0.4rem 0.5rem;
    vertical-align: middle;
    white-space: nowrap;
  }

  .job-table tbody tr {
    height: auto;
  }

  .badge-status {
    padding: 0.2em 0.4em;
    font-weight: 500;
    font-size: 0.7rem;
  }

  .action-buttons .btn {
    margin-right: 0.15rem;
    padding: 0.15rem 0.4rem;
    font-size: 0.75rem;
  }

  /* Compact cards */
  .card {
    margin-bottom: 0.75rem;
    border-radius: 6px;
  }

  .card-header {
    padding: 0.5rem 0.75rem;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .card-body {
    padding: 0.75rem;
  }

  /* Compact buttons */
  .btn-sm {
    padding: 0.2rem 0.5rem;
    font-size: 0.75rem;
  }

  .refresh-indicator {
    display: inline-block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #28a745;
    margin-right: 0.25rem;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .code-block {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 3px;
    padding: 0.15rem 0.35rem;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 0.75rem;
  }

  .pagination {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .pagination .page-link {
    color: #495057;
    border-color: #dee2e6;
    padding: 0.25rem 0.5rem;
    font-size: 0.8rem;
  }

  .pagination .page-item.active .page-link {
    background-color: #0d6efd;
    border-color: #0d6efd;
  }

  .pagination .page-item.disabled .page-link {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .loading-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    justify-content: center;
    align-items: center;
  }

  .loading-overlay.active {
    display: flex;
  }

  .spinner {
    border: 4px solid #f3f3f3;
    border-top: 4px solid #3498db;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .table-hover tbody tr:hover {
    background-color: #f8f9fa;
    cursor: pointer;
  }

  /* Compact header buttons */
  .queue-admin-page .btn {
    font-size: 0.8rem;
    padding: 0.35rem 0.75rem;
  }

  /* Reduce spacing */
  .mb-4 {
    margin-bottom: 0.75rem !important;
  }

  .mb-3 {
    margin-bottom: 0.5rem !important;
  }

  .mt-3 {
    margin-top: 0.5rem !important;
  }

  .py-4 {
    padding-top: 0.75rem !important;
    padding-bottom: 0.75rem !important;
  }

  .py-5 {
    padding-top: 1rem !important;
    padding-bottom: 1rem !important;
  }

  /* Compact row spacing */
  .row.g-2 {
    --bs-gutter-y: 0.25rem;
    --bs-gutter-x: 0.25rem;
  }

  /* Even more compact table */
  .table-sm {
    font-size: 0.75rem;
  }

  .table-sm th,
  .table-sm td {
    padding: 0.3rem 0.4rem;
  }

  /* Compact badges */
  .badge {
    font-size: 0.65rem;
    padding: 0.15em 0.4em;
  }

  /* Compact modal */
  .modal-body {
    padding: 0.75rem;
  }

  .modal-body .form-label {
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
  }

  .modal-body .form-control,
  .modal-body .form-select {
    font-size: 0.8rem;
    padding: 0.3rem 0.5rem;
  }
</style>

<div class="queue-admin-page">
  <div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-2">
      <div>
        <h1 class="h5 mb-0">
          <i class="bi bi-list-task text-primary"></i> Solid Queue Admin
          <span class="badge bg-danger ms-1" style="font-size: 0.65rem;">Super User</span>
        </h1>
        <small class="text-muted">
          <span class="refresh-indicator"></span>
          Create, Delete, Unqueue, Pause/Resume
        </small>
      </div>
      <div>
        <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#createJobModal">
          <i class="bi bi-plus-circle"></i> Create
        </button>
        <%= form_with url: clear_finished_admin_solid_queue_index_path, method: :delete, class: "d-inline",
            data: { confirm: "Are you sure you want to clear all finished jobs?" } do |f| %>
          <%= f.submit "ðŸ—‘ï¸ Clear", class: "btn btn-outline-danger btn-sm" %>
        <% end %>
        <button type="button" class="btn btn-primary btn-sm" onclick="location.reload()">
          <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
      </div>
    </div>

    <!-- Status Cards - Compact Horizontal -->
    <div class="row g-2 mb-2">
      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card stat-card border-warning mb-0">
          <div class="card-body py-1 px-2">
            <div class="d-flex align-items-center">
              <div class="stat-icon bg-warning bg-opacity-25 me-2">
                <i class="bi bi-hourglass-split text-warning"></i>
              </div>
              <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted" style="font-size: 0.65rem;">PENDING</span>
                  <strong style="font-size: 1.1rem;"><%= @jobs_by_status[:pending] %></strong>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card stat-card border-primary mb-0">
          <div class="card-body py-1 px-2">
            <div class="d-flex align-items-center">
              <div class="stat-icon bg-primary bg-opacity-25 me-2">
                <i class="bi bi-play-circle text-primary"></i>
              </div>
              <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted" style="font-size: 0.65rem;">RUNNING</span>
                  <strong style="font-size: 1.1rem;"><%= @jobs_by_status[:running] %></strong>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card stat-card border-danger mb-0">
          <div class="card-body py-1 px-2">
            <div class="d-flex align-items-center">
              <div class="stat-icon bg-danger bg-opacity-25 me-2">
                <i class="bi bi-x-circle text-danger"></i>
              </div>
              <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted" style="font-size: 0.65rem;">FAILED</span>
                  <strong style="font-size: 1.1rem;"><%= @jobs_by_status[:failed] %></strong>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card stat-card border-success mb-0">
          <div class="card-body py-1 px-2">
            <div class="d-flex align-items-center">
              <div class="stat-icon bg-success bg-opacity-25 me-2">
                <i class="bi bi-check-circle text-success"></i>
              </div>
              <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted" style="font-size: 0.65rem;">FINISHED</span>
                  <strong style="font-size: 1.1rem;"><%= @jobs_by_status[:finished] %></strong>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters - Compact Inline -->
    <div class="filter-section">
      <%= form_with url: admin_solid_queue_index_path, method: :get, local: true, class: "row g-2 align-items-end", id: "filter-form" do |f| %>
        <div class="col-md-2 col-sm-6">
          <%= f.label :status, "Status", class: "form-label fw-bold mb-1" %>
          <%= f.select :status,
              options_for_select([
                ["All", "all"],
                ["Pending", "pending"],
                ["Running", "running"],
                ["Failed", "failed"],
                ["Finished", "finished"]
              ], @filter_status),
              {},
              { class: "form-select" } %>
        </div>

        <div class="col-md-2 col-sm-6">
          <%= f.label :queue, "Queue", class: "form-label fw-bold mb-1" %>
          <%= f.select :queue,
              options_for_select([["All Queues", ""]] + @available_queues.map { |q| [q, q] }, @filter_queue),
              {},
              { class: "form-select" } %>
        </div>

        <div class="col-md-2 col-sm-6">
          <%= f.label :class_name, "Class", class: "form-label fw-bold mb-1" %>
          <%= f.select :class_name,
              options_for_select([["All Classes", ""]] + @available_classes.map { |c| [c.split("::").last, c] }, @filter_class),
              {},
              { class: "form-select" } %>
        </div>

        <div class="col-md-3 col-sm-6">
          <%= f.label :search, "Search", class: "form-label fw-bold mb-1" %>
          <%= f.text_field :search,
              value: @search_term,
              placeholder: "ID, class, queue...",
              class: "form-control" %>
        </div>

        <% if @filter_status == "all" %>
          <div class="col-md-2 col-sm-6">
            <label class="form-label fw-bold mb-1" style="display: block;">&nbsp;</label>
            <div class="form-check mt-2">
              <%= f.check_box :show_finished_successful, { checked: @show_finished_successful, class: "form-check-input" }, "true", "false" %>
              <%= f.label :show_finished_successful, "Show successful finished", class: "form-check-label", style: "font-size: 0.75rem;" %>
            </div>
          </div>
        <% end %>

        <div class="col-md-3 col-sm-12">
          <%= f.submit "Apply", class: "btn btn-primary btn-sm" %>
          <%= link_to "Clear", admin_solid_queue_index_path, class: "btn btn-outline-secondary btn-sm" %>
        </div>
      <% end %>
    </div>

    <!-- Queue Statistics -->
    <% if @queue_stats.any? %>
      <div class="card mb-2 shadow-sm">
        <div class="card-header bg-primary text-white py-1">
          <h6 class="mb-0" style="font-size: 0.8rem;"><i class="bi bi-bar-chart"></i> Queue Stats & Controls</h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm table-hover job-table mb-0">
              <thead>
                <tr>
                  <th>Queue Name</th>
                  <th class="text-end">Pending</th>
                  <th class="text-end">Running</th>
                  <th class="text-end">Failed</th>
                  <th class="text-end">Avg Duration (s)</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @queue_stats.each do |queue_name, stats| %>
                  <tr>
                    <td>
                      <span class="code-block"><%= queue_name %></span>
                      <% if @paused_queues.include?(queue_name) %>
                        <span class="badge bg-warning ms-2">PAUSED</span>
                      <% end %>
                    </td>
                    <td class="text-end"><%= stats[:pending] %></td>
                    <td class="text-end">
                      <% if stats[:running] > 0 %>
                        <span class="badge bg-primary"><%= stats[:running] %></span>
                      <% else %>
                        <%= stats[:running] %>
                      <% end %>
                    </td>
                    <td class="text-end">
                      <% if stats[:failed] > 0 %>
                        <span class="badge bg-danger"><%= stats[:failed] %></span>
                      <% else %>
                        <%= stats[:failed] %>
                      <% end %>
                    </td>
                    <td class="text-end"><%= stats[:avg_duration] %></td>
                    <td class="text-center">
                      <% if @paused_queues.include?(queue_name) %>
                        <span class="badge bg-warning">Paused</span>
                      <% else %>
                        <span class="badge bg-success">Active</span>
                      <% end %>
                    </td>
                    <td class="text-center">
                      <% if @paused_queues.include?(queue_name) %>
                        <%= form_with url: unpause_queue_admin_solid_queue_index_path, method: :post, class: "d-inline" do |f| %>
                          <%= f.hidden_field :queue_name, value: queue_name %>
                          <%= f.submit "â–¶ï¸ Resume", class: "btn btn-sm btn-success" %>
                        <% end %>
                      <% else %>
                        <%= form_with url: pause_queue_admin_solid_queue_index_path, method: :post, class: "d-inline" do |f| %>
                          <%= f.hidden_field :queue_name, value: queue_name %>
                          <%= f.submit "â¸ï¸ Pause", class: "btn btn-sm btn-warning" %>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Recurring Tasks -->
    <% if @recurring_tasks.any? %>
      <div class="card mb-2 shadow-sm border-info">
        <div class="card-header bg-info text-white py-1">
          <h6 class="mb-0" style="font-size: 0.8rem;">
            <i class="bi bi-repeat"></i> Recurring Tasks
            <span class="badge bg-light text-dark ms-1" style="font-size: 0.65rem;"><%= @recurring_tasks.count %></span>
          </h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm table-hover job-table mb-0">
              <thead>
                <tr>
                  <th>Task Key</th>
                  <th>Schedule</th>
                  <th>Class/Command</th>
                  <th>Queue</th>
                  <th>Priority</th>
                  <th>Last Run</th>
                  <th>Next Run</th>
                </tr>
              </thead>
              <tbody>
                <% @recurring_tasks.each do |task| %>
                  <tr>
                    <td>
                      <span class="code-block"><%= task.key %></span>
                    </td>
                    <td>
                      <div>
                        <span class="badge bg-info badge-status" title="<%= task.schedule %>">
                          <%= human_readable_schedule(task.schedule) %>
                        </span>
                      </div>
                      <small class="text-muted d-block mt-1" style="font-size: 0.65rem;">
                        <code style="font-size: 0.7rem;"><%= task.schedule %></code>
                      </small>
                    </td>
                    <td>
                      <% if task.class_name.present? %>
                        <span class="code-block"><%= task.class_name.split("::").last %></span>
                        <% if task.arguments.present? %>
                          <br>
                          <small class="text-muted">
                            Args: <%= task.arguments.is_a?(String) ? task.arguments : task.arguments.to_json %>
                          </small>
                        <% end %>
                      <% elsif task.command.present? %>
                        <span class="code-block" style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="<%= task.command %>">
                          <%= truncate(task.command, length: 40) %>
                        </span>
                      <% else %>
                        <span class="text-muted">â€”</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="code-block"><%= task.queue_name || "default" %></span>
                    </td>
                    <td><%= task.priority || 0 %></td>
                    <td>
                      <% last_execution = @recurring_executions.find { |e| e.task_key == task.key } %>
                      <% if last_execution %>
                        <%= time_ago_in_words(last_execution.created_at) %> ago
                        <% if last_execution.job %>
                          <br>
                          <small class="text-muted">
                            <%= link_to "Job ##{last_execution.job.id}", admin_solid_queue_path(last_execution.job.id), class: "text-decoration-none" %>
                          </small>
                        <% end %>
                      <% else %>
                        <span class="text-muted">Never</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="text-muted">Auto-scheduled</span>
                      <% if task.description.present? %>
                        <br>
                        <small class="text-muted" title="<%= task.description %>">
                          <%= truncate(task.description, length: 30) %>
                        </small>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% if @recurring_executions.any? %>
            <div class="mt-2">
              <small class="text-muted">
                <i class="bi bi-info-circle"></i> Showing last <%= @recurring_executions.count %> execution(s)
              </small>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Recent Failures -->
    <% if @recent_failures.any? %>
      <div class="card mb-2 shadow-sm border-danger">
        <div class="card-header bg-danger text-white py-1">
          <h6 class="mb-0" style="font-size: 0.8rem;">
            <i class="bi bi-exclamation-triangle"></i> Failures
            <span class="badge bg-light text-dark ms-1" style="font-size: 0.65rem;"><%= @recent_failures.count %></span>
          </h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm table-hover job-table mb-0">
              <thead>
                <tr>
                  <th>Job ID</th>
                  <th>Class Name</th>
                  <th>Queue</th>
                  <th>Failed At</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_failures.each do |failure| %>
                  <tr>
                    <td>
                      <%= link_to "##{failure.job.id}", admin_solid_queue_path(failure.job.id),
                          class: "text-decoration-none fw-bold" %>
                    </td>
                    <td><span class="code-block"><%= failure.job.class_name.split("::").last %></span></td>
                    <td><span class="code-block"><%= failure.job.queue_name %></span></td>
                    <td><%= time_ago_in_words(failure.created_at) %> ago</td>
                    <td class="text-end action-buttons">
                      <%= link_to admin_solid_queue_path(failure.job.id),
                          class: "btn btn-sm btn-outline-info", title: "View Details" do %>
                        <i class="bi bi-eye"></i>
                      <% end %>
                      <%= form_with url: retry_failed_admin_solid_queue_path(failure.id),
                          method: :post, class: "d-inline" do |f| %>
                        <%= f.submit "Retry", class: "btn btn-sm btn-success",
                            data: { confirm: "Retry this failed job?" } %>
                      <% end %>
                      <%= form_with url: delete_failed_admin_solid_queue_path(failure.job.id),
                          method: :delete, class: "d-inline" do |f| %>
                        <%= f.submit "Delete", class: "btn btn-sm btn-outline-danger",
                            data: { confirm: "Delete this failed job permanently?" } %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Jobs List -->
    <div class="card shadow-sm mb-2">
      <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-1">
        <h6 class="mb-0" style="font-size: 0.8rem;">
          <i class="bi bi-clock-history"></i> Jobs
          <span class="badge bg-light text-dark ms-1" style="font-size: 0.65rem;">
            <%= (@page - 1) * 25 + 1 %>-<%= [@page * 25, @total_count].min %>/<%= @total_count %>
          </span>
        </h6>
        <div id="bulkActions" style="display: none;">
          <%= form_with url: bulk_delete_admin_solid_queue_index_path, method: :post, class: "d-inline" do |f| %>
            <%= f.hidden_field :job_ids, id: "bulkDeleteIds" %>
            <%= f.submit "ðŸ—‘ï¸ Delete Selected", class: "btn btn-sm btn-danger",
                data: { confirm: "Delete selected jobs?" } %>
          <% end %>
          <%= form_with url: bulk_unqueue_admin_solid_queue_index_path, method: :post, class: "d-inline" do |f| %>
            <%= f.hidden_field :job_ids, id: "bulkUnqueueIds" %>
            <%= f.submit "â¹ï¸ Unqueue Selected", class: "btn btn-sm btn-warning",
                data: { confirm: "Unqueue selected jobs?" } %>
          <% end %>
          <button type="button" class="btn btn-sm btn-outline-light" onclick="clearSelection()">Clear Selection</button>
        </div>
      </div>
      <div class="card-body">
        <% if @recent_jobs.any? %>
          <div class="table-responsive">
            <table class="table table-sm table-hover job-table mb-0">
              <thead>
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" id="selectAll" onchange="toggleAll(this)">
                  </th>
                  <th>ID</th>
