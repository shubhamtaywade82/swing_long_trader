                    <td>
                      <% if job.finished_at %>
                        <%= time_ago_in_words(job.finished_at) %> ago
                      <% else %>
                        <span class="text-muted">â€”</span>
                      <% end %>
                    </td>
                    <td class="text-end action-buttons">
                      <%= link_to admin_solid_queue_path(job.id),
                          class: "btn btn-sm btn-outline-primary", title: "View Details" do %>
                        <i class="bi bi-eye"></i>
                      <% end %>
                      <% if job.finished_at.nil? %>
                        <%= form_with url: unqueue_job_admin_solid_queue_path(job.id),
                            method: :post, class: "d-inline" do |f| %>
                          <%= f.submit "â¹ï¸ Unqueue", class: "btn btn-sm btn-outline-warning",
                              data: { confirm: "Unqueue job ##{job.id}?" } %>
                        <% end %>
                      <% end %>
                      <%= form_with url: delete_job_admin_solid_queue_path(job.id),
                          method: :delete, class: "d-inline" do |f| %>
                        <%= f.submit "Delete", class: "btn btn-sm btn-outline-danger",
                            data: { confirm: "Delete job ##{job.id} permanently?" } %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if @total_pages > 1 %>
            <nav aria-label="Jobs pagination" class="mt-3">
              <ul class="pagination justify-content-center mb-0">
                <%
                  # Build pagination URL with current filters
                  base_params = {
                    status: @filter_status,
                    queue: @filter_queue,
                    class_name: @filter_class,
                    search: @search_term
                  }.compact
                %>

                <!-- First & Previous -->
                <li class="page-item <%= 'disabled' if @page == 1 %>">
                  <%= link_to admin_solid_queue_index_path(base_params.merge(page: 1)),
                      class: "page-link" do %>
                    <i class="bi bi-chevron-double-left"></i>
                  <% end %>
                </li>
                <li class="page-item <%= 'disabled' if @page == 1 %>">
                  <%= link_to admin_solid_queue_index_path(base_params.merge(page: @page - 1)),
                      class: "page-link" do %>
                    <i class="bi bi-chevron-left"></i> Previous
                  <% end %>
                </li>

                <!-- Page Numbers -->
                <%
                  start_page = [@page - 2, 1].max
                  end_page = [start_page + 4, @total_pages].min
                  start_page = [end_page - 4, 1].max if end_page - start_page < 4
                %>

                <% if start_page > 1 %>
                  <li class="page-item">
                    <%= link_to "1", admin_solid_queue_index_path(base_params.merge(page: 1)),
                        class: "page-link" %>
                  </li>
                  <% if start_page > 2 %>
                    <li class="page-item disabled">
                      <span class="page-link">...</span>
                    </li>
                  <% end %>
                <% end %>

                <% (start_page..end_page).each do |p| %>
                  <li class="page-item <%= 'active' if p == @page %>">
                    <%= link_to p.to_s, admin_solid_queue_index_path(base_params.merge(page: p)),
                        class: "page-link" %>
                  </li>
                <% end %>

                <% if end_page < @total_pages %>
                  <% if end_page < @total_pages - 1 %>
                    <li class="page-item disabled">
                      <span class="page-link">...</span>
                    </li>
                  <% end %>
                  <li class="page-item">
                    <%= link_to @total_pages.to_s,
                        admin_solid_queue_index_path(base_params.merge(page: @total_pages)),
                        class: "page-link" %>
                  </li>
                <% end %>

                <!-- Next & Last -->
                <li class="page-item <%= 'disabled' if @page >= @total_pages %>">
                  <%= link_to admin_solid_queue_index_path(base_params.merge(page: @page + 1)),
                      class: "page-link" do %>
                    Next <i class="bi bi-chevron-right"></i>
                  <% end %>
                </li>
                <li class="page-item <%= 'disabled' if @page >= @total_pages %>">
                  <%= link_to admin_solid_queue_index_path(base_params.merge(page: @total_pages)),
                      class: "page-link" do %>
                    <i class="bi bi-chevron-double-right"></i>
                  <% end %>
                </li>
              </ul>
            </nav>
          <% end %>
        <% else %>
          <div class="text-center py-5">
            <i class="bi bi-inbox fs-1 text-muted"></i>
            <p class="text-muted mt-3">No jobs found matching your filters.</p>
            <%= link_to "Clear Filters", admin_solid_queue_index_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Create Job Modal -->
<div class="modal fade" id="createJobModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Create New Job</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with url: create_job_admin_solid_queue_index_path, method: :post, local: true do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :class_name, "Job Class Name", class: "form-label fw-bold" %>
            <%= f.select :class_name,
                options_for_select(
                  [["-- Select a Job Class --", ""]] +
                  @available_job_classes.map { |c| [c.split("::").last, c] },
                  params[:class_name]
                ),
                {},
                { class: "form-select", required: true, id: "job_class_select" } %>
