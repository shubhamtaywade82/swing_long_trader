              <div class="mb-3">
                <%= f.label :scheduled_at, "Schedule At (optional)", class: "form-label fw-bold" %>
                <%= f.datetime_local_field :scheduled_at,
                    value: params[:scheduled_at],
                    class: "form-control" %>
                <small class="form-text text-muted">Leave empty to run immediately</small>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Create Job", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Loading Overlay -->
<div class="loading-overlay" id="loadingOverlay">
  <div class="spinner"></div>
</div>

<script>
  // Show loading on form submissions
  document.addEventListener('DOMContentLoaded', function() {
    const forms = document.querySelectorAll('form');
    forms.forEach(form => {
      form.addEventListener('submit', function() {
        document.getElementById('loadingOverlay').classList.add('active');
      });
    });

    // Hide loading on page load
    document.getElementById('loadingOverlay').classList.remove('active');
  });

  // Auto-refresh every 30 seconds (only if no filters applied to avoid losing state)
  <% unless @filter_status != "all" || @filter_queue.present? || @filter_class.present? || @search_term.present? %>
    setTimeout(function() {
      location.reload();
    }, 30000);
  <% end %>

  // Bulk selection
  function toggleAll(checkbox) {
    document.querySelectorAll('.job-checkbox').forEach(cb => {
      cb.checked = checkbox.checked;
    });
    updateBulkActions();
  }

  function updateBulkActions() {
    const checked = document.querySelectorAll('.job-checkbox:checked');
    const bulkActions = document.getElementById('bulkActions');
    const bulkDeleteIds = document.getElementById('bulkDeleteIds');
    const bulkUnqueueIds = document.getElementById('bulkUnqueueIds');

    if (checked.length > 0) {
      bulkActions.style.display = 'block';
      bulkDeleteIds.value = Array.from(checked).map(cb => cb.value).join(',');
      bulkUnqueueIds.value = Array.from(checked).map(cb => cb.value).join(',');
    } else {
      bulkActions.style.display = 'none';
    }
  }

  function clearSelection() {
    document.querySelectorAll('.job-checkbox').forEach(cb => cb.checked = false);
    document.getElementById('selectAll').checked = false;
    updateBulkActions();
  }

  // Auto-submit form when filters change - using event delegation for reliability
  (function() {
    let searchTimeout;

    function getFilterForm() {
      return document.getElementById('filter-form');
    }

    function submitFilterForm() {
      const filterForm = getFilterForm();
      if (filterForm) {
        filterForm.submit();
      }
    }

    // Use event delegation on document to catch all changes
    document.addEventListener('change', function(e) {
      const filterForm = getFilterForm();
      if (!filterForm || !filterForm.contains(e.target)) {
        return;
      }

      // Check if the changed element is one of our filter controls
      const target = e.target;
      if (target.matches('select[name="status"], select[name="queue"], select[name="class_name"], input[name="show_finished_successful"]')) {
        submitFilterForm();
      }
    });

    // Handle search input with debouncing
    document.addEventListener('input', function(e) {
      const filterForm = getFilterForm();
      if (!filterForm || !filterForm.contains(e.target)) {
        return;
      }

      const target = e.target;
      if (target.matches('input[name="search"]')) {
        clearTimeout(searchTimeout);
        // Auto-submit after 500ms of no typing
        searchTimeout = setTimeout(function() {
          if (target.value.length >= 3 || target.value.length === 0) {
            submitFilterForm();
          }
        }, 500);
      }
    });
  })();

  // Prefill arguments based on job class selection
  const jobClassSelect = document.getElementById('job_class_select');
  const jobArguments = document.getElementById('job_arguments');

  if (jobClassSelect && jobArguments) {
    // Example arguments for common job classes
    const jobExamples = {
      'Screeners::SwingScreenerJob': '{}',
      'Screeners::LongtermScreenerJob': '{}',
      'Screeners::AutomatedScreenerJob': '{"screener_type": "swing"}',
      'Screeners::AiRankerJob': '{}',
      'Candles::DailyIngestorJob': '{}',
      'Candles::WeeklyIngestorJob': '{}',
      'Candles::IntradayFetcherJob': '{}',
      'Strategies::Swing::AnalysisJob': '{}',
      'Strategies::Swing::EntryMonitorJob': '{}',
      'Strategies::Swing::ExitMonitorJob': '{}',
      'MonitorJob': '{}',
      'NotifierJob': '{"message": "Test notification"}',
      'Portfolios::DailySnapshotJob': '{}',
      'Positions::SyncJob': '{}',
      'Orders::ProcessApprovedJob': '{}',
      'PaperTrading::ReconciliationJob': '{}',
      'PaperTrading::ExitMonitorJob': '{}',
      'AiConfidence::CalibrationJob': '{}',
      'ExecutorJob': '{}'
    };

    jobClassSelect.addEventListener('change', function() {
      const selectedClass = this.value;
      if (selectedClass && jobExamples[selectedClass]) {
        jobArguments.value = jobExamples[selectedClass];
        jobArguments.placeholder = `Example: ${jobExamples[selectedClass]}`;
      } else {
        jobArguments.value = '';
        jobArguments.placeholder = '[] or {"key": "value"}';
      }
    });
  }
</script>
