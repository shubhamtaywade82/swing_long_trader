          </div>

          <div class="mb-3">
            <%= f.label :queue_name, "Queue", class: "form-label fw-bold" %>
            <%
              # Common queues used in the application
              common_queues = ["default", "screener", "monitoring", "background",
                              "data_ingestion", "ai_evaluation", "execution", "notifier"]
              # Combine with queues from database, removing duplicates
              all_queues = (common_queues + @available_queues).uniq.sort
            %>
            <%= f.select :queue_name,
                options_for_select(
                  all_queues.map { |q| [q, q] },
                  params[:queue_name] || "default"
                ),
                {},
                { class: "form-select" } %>
            <small class="form-text text-muted">Queue name for job execution</small>
          </div>

          <div class="mb-3">
            <%= f.label :arguments, "Arguments (JSON or Ruby array)", class: "form-label fw-bold" %>
            <%= f.text_area :arguments,
                value: params[:arguments] || "",
                placeholder: '[] or {"key": "value"}',
                class: "form-control",
                rows: 4,
