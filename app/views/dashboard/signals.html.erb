<% content_for :page_title, "Trading Signals" %>

<div class="signals-page">
  <p class="text-muted mb-3 small">View and manage trading signals</p>

  <!-- Filters -->
  <div class="card mb-3">
    <div class="card-body p-2">
      <div class="row g-2">
        <div class="col-md-4">
          <label class="form-label">Status</label>
          <div class="btn-group w-100" role="group">
            <%= link_to signals_path(status: "all", type: @type),
                class: "btn btn-outline-secondary #{'active' if @status == 'all'}" do %>
              All
            <% end %>
            <%= link_to signals_path(status: "executed", type: @type),
                class: "btn btn-outline-success #{'active' if @status == 'executed'}" do %>
              Executed
            <% end %>
            <%= link_to signals_path(status: "pending", type: @type),
                class: "btn btn-outline-warning #{'active' if @status == 'pending'}" do %>
              Pending
            <% end %>
            <%= link_to signals_path(status: "failed", type: @type),
                class: "btn btn-outline-danger #{'active' if @status == 'failed'}" do %>
              Failed
            <% end %>
          </div>
        </div>
        <div class="col-md-4">
          <label class="form-label">Type</label>
          <div class="btn-group w-100" role="group">
            <%= link_to signals_path(status: @status, type: "all"),
                class: "btn btn-outline-primary #{'active' if @type == 'all'}" do %>
              All
            <% end %>
            <%= link_to signals_path(status: @status, type: "live"),
                class: "btn btn-outline-primary #{'active' if @type == 'live'}" do %>
              Live
            <% end %>
            <%= link_to signals_path(status: @status, type: "paper"),
                class: "btn btn-outline-primary #{'active' if @type == 'paper'}" do %>
              Paper
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Signals Table -->
  <div class="card">
    <div class="card-body p-2">
      <% if @signals.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Symbol</th>
                <th>Direction</th>
                <th>Entry Price</th>
                <th>Quantity</th>
                <th>Stop Loss</th>
                <th>Take Profit</th>
                <th>Order Value</th>
                <th>Status</th>
                <th>Generated At</th>
              </tr>
            </thead>
            <tbody>
              <% @signals.each do |signal| %>
                <tr data-signal-id="<%= signal.id %>">
                  <td><strong><%= signal.symbol %></strong></td>
                  <td>
                    <span class="badge bg-<%= signal.long? ? 'success' : 'danger' %>">
                      <%= signal.direction.upcase %>
                    </span>
                  </td>
                  <td>₹<%= number_with_precision(signal.entry_price, precision: 2) %></td>
                  <td><%= signal.quantity %></td>
                  <td>₹<%= number_with_precision(signal.stop_loss, precision: 2) if signal.stop_loss %></td>
                  <td>₹<%= number_with_precision(signal.take_profit, precision: 2) if signal.take_profit %></td>
                  <td>₹<%= number_to_currency(signal.order_value, unit: "₹", precision: 0) %></td>
                  <td>
                    <% if signal.executed? %>
                      <span class="badge bg-success">Executed</span>
                    <% elsif signal.pending_approval? %>
                      <span class="badge bg-warning">Pending Approval</span>
                    <% elsif signal.failed? %>
                      <span class="badge bg-danger">Failed</span>
                    <% else %>
                      <span class="badge bg-secondary">Not Executed</span>
                    <% end %>
                  </td>
                  <td><%= signal.signal_generated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
          <p class="text-muted mt-3">No signals found</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
