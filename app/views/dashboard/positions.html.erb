<% content_for :page_title, "Positions" %>

<div class="positions-page">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2>Positions</h2>
      <p class="text-muted mb-0">Monitor all your trading positions</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-3">
          <label class="form-label">Trading Mode</label>
          <div class="btn-group w-100" role="group">
            <%= link_to positions_path(mode: "all", status: @status),
                class: "btn btn-outline-primary #{'active' if @mode == 'all'}" do %>
              All
            <% end %>
            <%= link_to positions_path(mode: "live", status: @status),
                class: "btn btn-outline-primary #{'active' if @mode == 'live'}" do %>
              Live
            <% end %>
            <%= link_to positions_path(mode: "paper", status: @status),
                class: "btn btn-outline-primary #{'active' if @mode == 'paper'}" do %>
              Paper
            <% end %>
          </div>
        </div>
        <div class="col-md-3">
          <label class="form-label">Status</label>
          <div class="btn-group w-100" role="group">
            <%= link_to positions_path(mode: @mode, status: "all"),
                class: "btn btn-outline-secondary #{'active' if @status == 'all'}" do %>
              All
            <% end %>
            <%= link_to positions_path(mode: @mode, status: "open"),
                class: "btn btn-outline-secondary #{'active' if @status == 'open'}" do %>
              Open
            <% end %>
            <%= link_to positions_path(mode: @mode, status: "closed"),
                class: "btn btn-outline-secondary #{'active' if @status == 'closed'}" do %>
              Closed
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Positions Table -->
  <div class="card">
    <div class="card-body">
      <% if @positions.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Symbol</th>
                <th>Direction</th>
                <th>Quantity</th>
                <th>Entry Price</th>
                <th>Current Price</th>
                <th>Stop Loss</th>
                <th>Take Profit</th>
                <th>Unrealized P&L</th>
                <th>Realized P&L</th>
                <th>Status</th>
                <th>Opened At</th>
              </tr>
            </thead>
            <tbody>
              <% @positions.each do |position| %>
                <tr data-position-id="<%= position.id %>">
                  <td><strong><%= position.symbol %></strong></td>
                  <td>
                    <span class="badge bg-<%= position.long? ? 'success' : 'danger' %>">
                      <%= position.direction.upcase %>
                    </span>
                  </td>
                  <td><%= position.quantity %></td>
                  <td>₹<%= number_with_precision(position.entry_price, precision: 2) %></td>
                  <td>₹<%= number_with_precision(position.current_price, precision: 2) %></td>
                  <td>₹<%= number_with_precision(position.stop_loss, precision: 2) if position.stop_loss %></td>
                  <td>₹<%= number_with_precision(position.take_profit, precision: 2) if position.take_profit %></td>
                  <td class="<%= position.unrealized_pnl >= 0 ? 'text-success' : 'text-danger' %>">
                    <%= number_to_currency(position.unrealized_pnl, unit: "₹", precision: 0) %>
                  </td>
                  <td class="<%= position.realized_pnl >= 0 ? 'text-success' : 'text-danger' %>">
                    <%= number_to_currency(position.realized_pnl, unit: "₹", precision: 0) %>
                  </td>
                  <td>
                    <span class="badge bg-<%= position.status == 'open' ? 'success' : 'secondary' %>">
                      <%= position.status.humanize %>
                    </span>
                  </td>
                  <td><%= position.opened_at.strftime("%Y-%m-%d %H:%M") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
          <p class="text-muted mt-3">No positions found</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
