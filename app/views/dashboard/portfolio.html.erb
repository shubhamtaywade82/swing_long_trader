<% content_for :page_title, "Portfolio" %>

<div class="portfolio-page">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2>Portfolio</h2>
      <p class="text-muted mb-0">View portfolio performance and metrics</p>
    </div>
    <div class="btn-group" role="group">
      <%= link_to portfolio_path(mode: "live"),
          class: "btn btn-outline-primary #{'active' if @mode == 'live'}" do %>
        Live Trading
      <% end %>
      <%= link_to portfolio_path(mode: "paper"),
          class: "btn btn-outline-info #{'active' if @mode == 'paper'}" do %>
        Paper Trading
      <% end %>
    </div>
  </div>

  <!-- Portfolio Metrics -->
  <div class="row g-3 mb-4">
    <div class="col-md-3 col-sm-6">
      <div class="stat-card">
        <div class="stat-icon bg-primary">
          <i class="bi bi-wallet2"></i>
        </div>
        <div class="stat-content">
          <h3 class="stat-value">
            <%= number_to_currency(@performance_metrics[:total_equity] || @performance_metrics[:capital] || 0, unit: "₹", precision: 0) %>
          </h3>
          <p class="stat-label"><%= @mode == "paper" ? "Total Equity" : "Closing Capital" %></p>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="stat-card">
        <div class="stat-icon bg-success">
          <i class="bi bi-arrow-up-circle"></i>
        </div>
        <div class="stat-content">
          <h3 class="stat-value text-success">
            <%= number_to_currency(@performance_metrics[:realized_pnl] || 0, unit: "₹", precision: 0) %>
          </h3>
          <p class="stat-label">Realized P&L</p>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="stat-card">
        <div class="stat-icon bg-info">
          <i class="bi bi-graph-up"></i>
        </div>
        <div class="stat-content">
          <h3 class="stat-value">
            <%= number_to_currency(@performance_metrics[:unrealized_pnl] || 0, unit: "₹", precision: 0) %>
          </h3>
          <p class="stat-label">Unrealized P&L</p>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="stat-card">
        <div class="stat-icon bg-warning">
          <i class="bi bi-arrow-down-circle"></i>
        </div>
        <div class="stat-content">
          <h3 class="stat-value text-danger">
            <%= number_with_precision(@performance_metrics[:max_drawdown] || 0, precision: 2) %>%
          </h3>
          <p class="stat-label">Max Drawdown</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Positions in Portfolio -->
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">Positions</h5>
    </div>
    <div class="card-body">
      <% if @positions.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Symbol</th>
                <th>Direction</th>
                <th>Quantity</th>
                <th>Entry Price</th>
                <th>Current Price</th>
                <th>P&L</th>
                <th>P&L %</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @positions.each do |position| %>
                <tr>
                  <td><strong><%= position.symbol %></strong></td>
                  <td>
                    <span class="badge bg-<%= position.long? ? 'success' : 'danger' %>">
                      <%= position.direction.upcase %>
                    </span>
                  </td>
                  <td><%= position.quantity %></td>
                  <td>₹<%= number_with_precision(position.entry_price, precision: 2) %></td>
                  <td>₹<%= number_with_precision(position.current_price, precision: 2) %></td>
                  <td class="<%= position.unrealized_pnl >= 0 ? 'text-success' : 'text-danger' %>">
                    <%= number_to_currency(position.unrealized_pnl, unit: "₹", precision: 0) %>
                  </td>
                  <td class="<%= position.unrealized_pnl_pct >= 0 ? 'text-success' : 'text-danger' %>">
                    <%= number_with_precision(position.unrealized_pnl_pct || 0, precision: 2) %>%
                  </td>
                  <td>
                    <span class="badge bg-<%= position.status == 'open' ? 'success' : 'secondary' %>">
                      <%= position.status.humanize %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
          <p class="text-muted mt-3">No positions in portfolio</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
